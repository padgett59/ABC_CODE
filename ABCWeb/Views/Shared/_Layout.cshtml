<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <meta http-equiv="X-UA-Compatible" content="IE=8"/>

        @Styles.Render("~/ABCWeb/Content/css")
@*        @Scripts.Render("~/bundles/modernizr")*@
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <a href='<%: Url.Action("RunSummary", "BuildCompare") %>'>
                        <img src='~/ABCWeb/Images/PrefixOnly.png'/>
                    </a>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li><span><br>@Html.ActionLink("Run Summary", "RunSummary", "BuildCompare")</span></li>&nbsp;&nbsp;
                            <li>
                                <span class='commonMenuItem' style="display:inline-block; position: absolute">
                                    Admin<br>
                                    <span id='adminSubMenuDiv' class='sub_menu' style='vertical-align:top;text-align:left;font-style:italic'>           
                                        <span id='adminRunLog'>&nbsp;&nbsp;Run Logs</span><br/>                                                 
                                        <span id='adminUserGroups'>&nbsp;&nbsp;User Groups</span>                                          
                                    </span>
                                </span>
                            </li>
                            <li> <!--Spacer -->
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Automated Build Compare</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>

<script src="~/ABCWeb/Models/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function() {

        //Run Log menu item  clicked
        $('[id$=adminRunLog]').click(function () {
            window.location.replace('@Url.Action("RunLog", "BuildCompare")');
        });

        //User Groups menu item clicked
        $('[id$=adminUserGroups]').click(function () {
            window.location.replace('@Url.Action("UserGroups", "BuildCompare")');
        });

        //Run Archive Item clicked
        $('[id$=RunArchive]').click(function () {
            var archiveLocation;
            switch (this.id.toString()) {
                case 'currentRunArchive':
                    break;
                case 'priorRunArchive':
                    break;
                case 'get7ZipRunArchive':
                    archiveLocation = 'http://www.7-zip.org/';
                    break;
            }
            window.open(archiveLocation, '_blank');
        });

    });

</script>